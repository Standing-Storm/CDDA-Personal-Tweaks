        { "u_has_effect": "weary_8" }
      ]
    },
    "effect": [
      { "u_add_effect": "effect_no_arcana_casting", "duration": 0 },
      { "u_message": "You are much too weary to cast anything!", "type": "bad" }
    ]
  }
